# AstraTrade Mobile Environment Configuration
# Copy this file to .env and update with your actual API keys

# ===========================================
# STARKNET CONFIGURATION
# ===========================================

# Starknet RPC URLs
STARKNET_SEPOLIA_RPC=https://starknet-sepolia.public.blastapi.io/rpc/v0_7
STARKNET_MAINNET_RPC=https://starknet-mainnet.public.blastapi.io/rpc/v0_7

# Network Selection (development vs production)
USE_MAINNET=false

# ===========================================
# EXTENDED EXCHANGE API
# ===========================================

# Extended Exchange API Key for real perpetual trading
# Get from: https://extended.exchange/api/register
EXTENDED_EXCHANGE_API_KEY=your_extended_exchange_api_key_here

# Extended Exchange URLs
EXTENDED_EXCHANGE_SEPOLIA_URL=https://api.sepolia.extended.exchange/v1
EXTENDED_EXCHANGE_MAINNET_URL=https://api.extended.exchange/v1

# ===========================================
# AVNU PAYMASTER (Gasless Transactions)
# ===========================================

# AVNU API Key for gasless transactions
# Get from: https://avnu.fi/api/register
AVNU_API_KEY=your_avnu_api_key_here

# AVNU API URLs
AVNU_SEPOLIA_API=https://sepolia.api.avnu.fi
AVNU_MAINNET_API=https://starknet.api.avnu.fi

# ===========================================
# WEB3AUTH (Social Login)
# ===========================================

# Web3Auth Client ID for Google/Apple login
# Get from: https://dashboard.web3auth.io
WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# ===========================================
# MOBILE DEPLOYMENT
# ===========================================

# iOS Bundle Identifier
IOS_BUNDLE_ID=com.astratrade.app

# Android Package Name  
ANDROID_PACKAGE_NAME=com.astratrade.app

# App Store Configuration
APP_NAME=AstraTrade
APP_VERSION=1.0.0
BUILD_NUMBER=1

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Mode (enables additional logging)
DEVELOPMENT_MODE=true

# Enable Biometric Authentication
ENABLE_BIOMETRIC=true

# Enable Mock Trading (for testing)
ENABLE_MOCK_TRADING=true

# API Timeouts (seconds)
API_TIMEOUT=30
RPC_TIMEOUT=10

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Encryption Settings
ENABLE_SECURE_STORAGE=true
KEYCHAIN_ACCESS_GROUP=com.astratrade.keychain

# Network Security
ENABLE_CERTIFICATE_PINNING=true
REQUIRE_HTTPS=true

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Analytics Configuration (optional)
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=your_analytics_key_here

# Error Reporting
ENABLE_CRASH_REPORTING=true
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# BOUNTY SUBMISSION CONFIGURATION
# ===========================================

# StarkWare Bounty Identifier
BOUNTY_SUBMISSION_ID=astratrade_v1
TEAM_IDENTIFIER=astratrade_team

# Demo Configuration
DEMO_MODE=false
DEMO_WALLET_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
DEMO_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef